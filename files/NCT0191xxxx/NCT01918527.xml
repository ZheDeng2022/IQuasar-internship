  <primary_outcome>
    <measure>Two-year disease free survival</measure>
    <time_frame>2 years after completed study treatment</time_frame>
  </primary_outcome>
  <secondary_outcome>
    <measure>Rate of patients fulfilling the criteria for adjuvant chemotherapy</measure>
