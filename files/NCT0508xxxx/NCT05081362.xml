  <primary_outcome>
    <measure>Arterial pressure measured in mmHg</measure>
    <time_frame>6 months</time_frame>
    <description>Continuous measurement of the arterial pressure for 10 minutes in rest and 10 minutes in orthostatic position.</description>
  </primary_outcome>
  <primary_outcome>
    <measure>Heart rate measured in bpm</measure>
    <time_frame>6 months</time_frame>
    <description>Continuous measurement of heart rate for 10 minutes in rest and 10 minutes in orthostatic position.</description>
  </primary_outcome>
  <primary_outcome>
    <measure>Respiratory frequency</measure>
    <time_frame>6 months</time_frame>
    <description>Continuous measurement of respiratory frequency for 10 minutes in rest and 10 minutes in orthostatic position.</description>
  </primary_outcome>
