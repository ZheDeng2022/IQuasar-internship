  </study_design_info>
  <primary_outcome>
    <measure>Visual Analog Scale (VAS) scores of low back pain and leg pain</measure>
    <time_frame>2 years after revision surgery</time_frame>
    <description>Visual Analog Scale (VAS) scores of low back pain and leg pain</description>
  </primary_outcome>
  <primary_outcome>
    <measure>Japanese Orthopedic Association (JOA) score</measure>
    <time_frame>2 years after revision surgery</time_frame>
    <description>Japanese Orthopedic Association (JOA) score</description>
  </primary_outcome>
  <primary_outcome>
    <measure>Oswestry Disability Index (ODI)</measure>
    <time_frame>2 years after revision surgery</time_frame>
