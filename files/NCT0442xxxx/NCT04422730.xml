  <oversight_info>
    <has_dmc>No</has_dmc>
  </oversight_info>
  <brief_summary>
    <textblock>
      Evaluation of psychological impact of patients after pancreatectomy because of cancer&#xD;
      diagnosis. Patients will be evaluated with questionnaires after and before intervention. 3&#xD;
      control groups will be used to compare de psychological impact.&#xD;
    </textblock>
  </brief_summary>
  <overall_status>Recruiting</overall_status>
  <start_date type="Actual">June 30, 2020</start_date>
  <completion_date type="Anticipated">December 2023</completion_date>
  <primary_completion_date type="Anticipated">December 2022</primary_completion_date>
  <study_type>Observational [Patient Registry]</study_type>
  <has_expanded_access>No</has_expanded_access>
  <study_design_info>
    <observational_model>Case-Control</observational_model>
    <time_perspective>Prospective</time_perspective>
  </study_design_info>
  <target_duration>12 Months</target_duration>
  <primary_outcome>
    <measure>comparaison of Scale of Body Connection score between 4 groups</measure>
    <time_frame>12 months</time_frame>
    <description>score from 0 to 5</description>
  </primary_outcome>
  <primary_outcome>
    <measure>comparaison of psychological interview between 4 groups</measure>
    <time_frame>12 months</time_frame>
    <description>measured by an psychologist interpretation</description>
  </primary_outcome>
  <primary_outcome>
    <measure>comparaison of Hospital Anxiety and Dépression score between 4 groups</measure>
    <time_frame>12 months</time_frame>
    <description>score from 0 to 21</description>
  </primary_outcome>
  <primary_outcome>
    <measure>comparaison of Test IES-R score between 4 groups</measure>
    <time_frame>12 months</time_frame>
    <description>score from 0 to100</description>
  </primary_outcome>
  <primary_outcome>
    <measure>comparaison of quality of life score between 4 groups</measure>
    <time_frame>12 months</time_frame>
    <description>score from 0 to 60</description>
  </primary_outcome>
  <number_of_groups>4</number_of_groups>
