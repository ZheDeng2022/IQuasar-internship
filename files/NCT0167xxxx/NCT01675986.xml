  <brief_title>Comparing the Efficacy of Pregabalin and Hydroxyzine on the Anxiety Score</brief_title>
  <sponsors>
    <lead_sponsor>
      <agency>Poitiers University Hospital</agency>
      <agency_class>Other</agency_class>
