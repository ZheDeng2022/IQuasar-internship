  <primary_outcome>
    <measure>Tissue concentrations of vancomycin</measure>
    <time_frame>Approximately 45-60 minutes after skin incision</time_frame>
    <description>Tissue concentrations of vancomycin in the hand and wrist following Bier Block administration versus systemic IV administration</description>
  </primary_outcome>
  <secondary_outcome>
    <measure>Adverse Events</measure>
    <time_frame>1 year</time_frame>
    <description>Number of adverse events reported for Bier Block administered vancomycin</description>
  </secondary_outcome>
  <number_of_arms>2</number_of_arms>
  <enrollment type="Anticipated">20</enrollment>
