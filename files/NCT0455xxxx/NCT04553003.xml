  </secondary_outcome>
  <secondary_outcome>
    <measure>relapse rate in 12 months after drug withdrawal</measure>
    <time_frame>12 months after drug withdrawal</time_frame>
    <description>relapse rate</description>
  </secondary_outcome>
  <secondary_outcome>
    <measure>mortality in 12 months after drug withdrawal</measure>
    <time_frame>12 months after drug withdrawal</time_frame>
    <description>mortality</description>
  </secondary_outcome>
  <number_of_arms>2</number_of_arms>
  <enrollment type="Anticipated">80</enrollment>
  <condition>Drug-induced Liver Injury</condition>
  <arm_group>
    <arm_group_label>glucocorticoid+hepatoprotectant group</arm_group_label>
