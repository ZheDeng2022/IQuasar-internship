    <intervention_name>Nocturnal Ventilation</intervention_name>
    <description>AirCurve 10CS PaceWave (Resmed)</description>
    <arm_group_label>Auto-Adaptative Servo-Ventilation</arm_group_label>
  </intervention>
  <eligibility>
    <criteria>
      <textblock>
        Inclusion Criteria:&#xD;
&#xD;
          -  acute ischemic stroke on brain MRI&#xD;
&#xD;
          -  NIHSS 6-22&#xD;
&#xD;
          -  thrombolysis&#xD;
&#xD;
        Exclusion Criteria:&#xD;
&#xD;
          -  Previous SAS&#xD;
&#xD;
          -  Previous stroke&#xD;
&#xD;
          -  Auto-adaptative Servo-Ventilation Contraindication&#xD;
      </textblock>
    </criteria>
    <gender>All</gender>
