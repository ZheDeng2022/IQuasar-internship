    <allocation>Randomized</allocation>
    <intervention_model>Parallel Assignment</intervention_model>
    <primary_purpose>Treatment</primary_purpose>
    <masking>None (Open Label)</masking>
  </study_design_info>
  <primary_outcome>
    <measure>Patient Sleep Quality</measure>
    <time_frame>6 weeks</time_frame>
    <description>Patients quality of sleep will be analyzed by having them answer a sleep quality index (PSQI) questionnaires</description>
  </primary_outcome>
  <number_of_arms>2</number_of_arms>
  <enrollment type="Actual">154</enrollment>
  <condition>Sleep Disturbance</condition>
  <condition>Total Joint Arthroplasty</condition>
  <arm_group>
    <arm_group_label>Group 1</arm_group_label>
    <arm_group_type>Placebo Comparator</arm_group_type>
    <description>Placebo Tablet</description>
  </arm_group>
  <arm_group>
