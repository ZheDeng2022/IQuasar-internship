  <primary_outcome>
    <measure>Right Heart Remodeling</measure>
    <time_frame>24 Months</time_frame>
    <description>Right Heart Remodeling measured via right atrial reservoir strain (%).</description>
  </primary_outcome>
  <secondary_outcome>
    <measure>Incident arrhythmias</measure>
    <time_frame>24 Months</time_frame>
    <description>Incident of atrial flutter, atrial fibrillation, atrial tachycardia, and/or ventricular tachycardia.</description>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Aerobic Capacity</measure>
    <time_frame>24 Months</time_frame>
    <description>Aerobic Capacity measured as maximal oxygen consumption (ml/kg/min).</description>
  </secondary_outcome>
  <enrollment type="Anticipated">220</enrollment>
