  <intervention>
    <intervention_type>Procedure</intervention_type>
    <intervention_name>Platelet rich plasma clot implantation</intervention_name>
    <description>Implantation of a platelet rich plasma clot, which is created from the plasma of the patients, and refrigerated to be inserted under the sealing amniotic membrane</description>
    <arm_group_label>Corneal perforation patients</arm_group_label>
  </intervention>
  <intervention>
    <intervention_type>Procedure</intervention_type>
    <intervention_name>Wound closure with amniotic membrane</intervention_name>
    <description>Closure of the corneal perforation with a synthetic amniotic membrane with a 2 mm safety margin</description>
    <arm_group_label>Corneal perforation patients</arm_group_label>
  </intervention>
