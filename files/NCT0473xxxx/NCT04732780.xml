  <primary_outcome>
    <measure>Hyperglycaemia Avoidance Scale</measure>
    <time_frame>Baseline</time_frame>
    <description>Questionnaire. Scored 0-96, with higher scores suggesting greater hyperglycaemia avoidance</description>
  </primary_outcome>
  <primary_outcome>
    <measure>GAD-7</measure>
    <time_frame>Baseline</time_frame>
    <description>Questionnaire. Scored 0-21, with higher scores suggesting greater anxiety</description>
  </primary_outcome>
  <primary_outcome>
    <measure>PHQ-9</measure>
    <time_frame>Baseline</time_frame>
    <description>Questionnaire. Scored 0-27, with higher scores suggesting greater depression</description>
  </primary_outcome>
  <primary_outcome>
    <measure>State Trait Anxiety Inventory</measure>
    <time_frame>Baseline</time_frame>
    <description>Questionnaire. Scored 20-80, with higher scores suggesting higher levels of trait anxiety</description>
  </primary_outcome>
  <primary_outcome>
    <measure>Hypoglycaemia Fear Survey 2</measure>
    <time_frame>Baseline</time_frame>
    <description>Questionnaire. Behaviour subscale scored 0-60; Worry subscale scored 0-72, in both cases with higher scores suggesting greater fear of hypoglycaemia</description>
  </primary_outcome>
  <primary_outcome>
    <measure>Problem Areas in Diabetes 5</measure>
    <time_frame>Baseline</time_frame>
    <description>Questionnaire. Scored 0-20, with higher scores suggesting greater diabetes stress.</description>
  </primary_outcome>
