  <brief_title>Precise Care for Cancer Related Fatigue</brief_title>
  <official_title>Objective Data for Cancer Related Fatigue in Cancer Patients</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Taipei Medical University</agency>
