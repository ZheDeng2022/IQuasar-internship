  <brief_title>The EBC Recovery Study</brief_title>
  <official_title>Electrophysiologic Biomarkers of Consciousness (EBC) Recovery After Traumatic Brain Injury</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>University of Miami</agency>
      <agency_class>Other</agency_class>
